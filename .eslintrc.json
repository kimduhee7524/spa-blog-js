{
    "root": true,
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "ignores": [
      "dist",
      "node_modules",
      ".vscode",
      "public",
      "package-lock.json",
      "pnpm-lock.yaml"
    ],
    "rules": {
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "no-unused-vars": "warn",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "printWidth": 100,
          "endOfLine": "auto"
        }
      ]
    }
  }